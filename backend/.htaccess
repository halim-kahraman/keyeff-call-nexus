
# Enable CORS for all routes - simplified to avoid duplicate headers
<IfModule mod_headers.c>
    # We're now only setting basic headers here, specific origin handling is in config.php
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Max-Age "1728000"
    
    # Remove Access-Control-Allow-Origin from here since we're handling it dynamically in PHP
</IfModule>

# PHP settings
<IfModule mod_php7.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
</IfModule>

<IfModule mod_php8.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
</IfModule>

# Handle OPTIONS preflight requests
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]
